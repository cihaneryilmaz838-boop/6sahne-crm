<%- include('../_header', { title }) %>

<h1>New Book</h1>

<% if (errors && errors.length) { %>
  <div class="errors">
    <strong>Validation errors:</strong>
    <ul>
      <% errors.forEach((err) => { %><li><%= err %></li><% }) %>
    </ul>
  </div>
<% } %>

<form method="post" action="/books">
  <p><label>Title <input name="title" required value="<%= form.title %>"></label></p>
  <p><label>Author <input name="author" value="<%= form.author %>"></label></p>
  <p><label>Publisher <input name="publisher" value="<%= form.publisher %>"></label></p>
  <p><label>ISBN <input name="isbn" value="<%= form.isbn %>"></label></p>
  <p><label>Unit price (kuru≈ü) <input type="number" min="0" step="1" name="unit_price" required value="<%= form.unit_price %>"></label></p>

  <p>
    <label>Active
      <select name="is_active">
        <option value="1" <%= String(form.is_active) === '1' ? 'selected' : '' %>>Yes</option>
        <option value="0" <%= String(form.is_active) === '0' ? 'selected' : '' %>>No</option>
      </select>
    </label>
  </p>

  <button type="submit">Create Book</button>
</form>

<p><a href="/books">Back to books</a></p>

<%- include('../_footer') %>
